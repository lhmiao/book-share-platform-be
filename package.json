{
  "name": "book-share-platform-be",
  "version": "1.0.0",
  "description": "图书分享平台后端",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-book-share-platform-be",
    "stop": "egg-scripts stop --title=egg-server-book-share-platform-be",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test-local": "egg-bin test",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "tslint --project . -c tslint.json",
    "clean": "ets clean"
  },
  "dependencies": {
    "@types/ms": "^0.7.31",
    "crypto-js": "^3.1.9-1",
    "egg": "^2.6.1",
    "egg-scripts": "^2.6.0",
    "egg-sequelize": "^5.2.0",
    "egg-validate": "^2.0.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "ms": "^2.1.2",
    "mysql2": "^2.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.11.0",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "tslib": "^1.9.0",
    "tslint": "^5.0.0",
    "tslint-config-egg": "^1.0.0",
    "typescript": "^3.0.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "author": "",
  "license": "MIT"
}
